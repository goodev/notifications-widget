<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@android:style/TextAppearance.DeviceDefault.Widget.Button">
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@android:style/Holo.Light.ButtonBar">

        <Button
            style="@style/Button.Wizard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/ignore_notifications"
            android:onClick="ignoreThisApp"/>
        <Button
            style="@style/Button.Wizard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/clear_app_settings"
            android:onClick="resetAppSettings"/>
    </LinearLayout>

</LinearLayout>